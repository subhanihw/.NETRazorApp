@page
@model SampleWebApp.Pages.Categories.EditModel
@{
}

<form method="post">
    <input hidden asp-for="Category.ID" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Edit Cateogry</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Category.Name"></label>
            <input asp-for="Category.Name" class="form-control"/>
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Category.Price"></label>
            <input asp-for="@Model.Category.Price" class="form-control" />
            <span asp-validation-for="@Model.Category.Price" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-page="Index" class="btn btn-primary" style="width:150px;">Back to List</a>
    </div>
</form>

@section Scripts {
     @{
         <partial name="_ValidationScriptsPartial.cshtml"/>
     }
 }